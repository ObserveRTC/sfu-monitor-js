{
  "name": "sfu-observer",
  "version": "1.0.0",
  "description": "A client library to observe SFUs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ObserveRTC/sfu-observer-js.git"
  },
  "keywords": [
    "sfu",
    "webrtc",
    "observer"
  ],
  "author": "Balazs Kreith",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ObserveRTC/sfu-observer-js/issues"
  },
  "homepage": "https://github.com/ObserveRTC/sfu-observer-js#readme",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  }
}
